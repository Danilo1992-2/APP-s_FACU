<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3FF6D00"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txID"
        android:layout_width="239dp"
        android:layout_height="209dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="505dp"
        android:fontFamily="casual"
        android:text="Digite o número, e seberá se é impar ou par"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NumID"
        android:layout_width="141dp"
        android:layout_height="115dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Digite aqui!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonID"
        android:layout_width="142dp"
        android:layout_height="76dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="39dp"
        android:background="#74615252"
        android:text="Descobrir"
        android:textAlignment="center"
        android:textColor="#A4FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumID" />
</androidx.constraintlayout.widget.ConstraintLayout>