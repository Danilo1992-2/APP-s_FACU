<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F4F4F	"
    android:scrollbarSize="@android:dimen/notification_large_icon_width"
    tools:context=".API_ImagenS">


    <TextView
        android:id="@+id/TextoRetornID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="#FFFAFA"
        android:textColorLink="#FFFAFA"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BotaoVoltar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="24dp"
        android:background="#BE60756D"
        android:backgroundTint="#EE040704"
        android:text="Votar"
        android:textColor="#E6DCE6"
        android:textColorHighlight="#EBEAEA"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextoRetornID"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="185dp"
        android:layout_height="108dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="163dp"
        app:layout_constraintBottom_toTopOf="@+id/TextoRetornID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimaryDark" />

</androidx.constraintlayout.widget.ConstraintLayout>