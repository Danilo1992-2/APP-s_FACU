<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#62B6A5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/BotaoResultID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#BE1D4749"
        android:text="Hora da verdade"
        android:textColor="#FDFFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="107dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="Informe suas notas"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#F7F4F4"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:drawableTint="#E4611313"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="143dp"
        android:layout_height="343dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/BotaoResultID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/professor" />

    <EditText
        android:id="@+id/AviID"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="529dp"
        android:ems="10"
        android:inputType="number"
        android:text="Nota AV1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Av2ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Av2ID"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="number"
        android:text="Nota AV2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/Av3ID"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="529dp"
        android:ems="10"
        android:inputType="number"
        android:text="Nota AV3"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Av2ID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>